<% @title = "組織名の編集" %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-lg">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6"><%= @title %></h1>

    <% if @message %>
      <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4">
        <%= @message %>
      </div>
    <% elsif @error %>
      <div class="bg-red-100 text-red-700 px-4 py-3 rounded mb-4">
        <%= @error %>
      </div>
    <% end %>

    <form method="post" action="<%= request.script_name %>/org/update" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700">新しい組織名</label>
        <input type="text" name="name" value="<%= @organization.name %>" required
               class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-200 focus:outline-none">
      </div>

      <div class="flex justify-between items-center mt-6">
        <button type="submit"
                class="bg-blue-600 text-white py-2 px-6 rounded hover:bg-blue-700 transition">
          更新
        </button>
        <a href="<%= request.script_name %>/" class="text-gray-600 hover:underline text-sm">
          ← トップに戻る
        </a>
      </div>
    </form>
  </div>
</div>
