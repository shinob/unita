<% @title = "ログイン" %>

<div class="flex justify-center pt-12 bg-muted min-h-screen">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-text mb-6"><%= @title %></h1>

    <% if @error %>
      <div class="bg-danger/10 text-danger px-4 py-3 rounded mb-4 border border-danger/30">
        <%= @error %>
      </div>
    <% end %>

    <form action="<%= APP_ROUTE %>/login" method="post" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-text">メールアドレス</label>
        <input type="email" name="email" required
               class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-primary focus:outline-none">
      </div>

      <div>
        <label class="block text-sm font-medium text-text">パスワード</label>
        <input type="password" name="password" required
               class="w-full mt-1 px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-primary focus:outline-none">
      </div>

      <div>
        <button type="submit"
                class="w-full bg-primaryDark text-white py-2 px-4 rounded hover:bg-primary transition">
          ログインする
        </button>
      </div>
    </form>

    <p class="mt-4 text-center text-sm text-gray-600">
      アカウントをお持ちでない方は
      <a href="<%= APP_ROUTE %>/signup" class="text-accent hover:underline">新規登録</a>
    </p>
  </div>
</div>
