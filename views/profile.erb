<h1 class="text-2xl font-bold text-center text-gray-800 mb-6">プロフィール編集</h1>

<% if @message %>
  <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4 text-center">
    <%= @message %>
  </div>
<% end %>

<form action="<%= request.script_name %>/profile/update" method="post" class="bg-white p-6 rounded-lg shadow-md max-w-2xl mx-auto space-y-6">
  <!-- 名前 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">氏名</label>
    <input type="text" name="name" value="<%= @user.name %>" required
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- メールアドレス -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">メールアドレス</label>
    <input type="email" name="email" value="<%= @user.email %>" required
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- パスワード -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">パスワード（変更する場合のみ入力）</label>
    <input type="password" name="password" placeholder="新しいパスワード"
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- 会社名 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">会社名</label>
    <input type="text" name="company_name" value="<%= @user.company_name %>"
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- 部署 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">部署</label>
    <input type="text" name="department" value="<%= @user.department %>"
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- 役職 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">役職</label>
    <input type="text" name="position" value="<%= @user.position %>"
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- 電話番号 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">電話番号</label>
    <input type="text" name="phone" value="<%= @user.phone %>"
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- 住所 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">住所</label>
    <input type="text" name="address" value="<%= @user.address %>"
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-primary focus:outline-none">
  </div>

  <!-- 備考 -->
  <div>
    <label class="block text-sm font-medium text-gray-700 mb-1">備考</label>
    <textarea name="notes" rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-md resize-y focus:ring focus:ring-primary focus:outline-none"><%= @user.notes %></textarea>
  </div>

  <!-- ボタン -->
  <div class="text-center">
    <button type="submit"
            class="bg-primaryDark text-white px-6 py-2 rounded hover:bg-blue-700 transition">
      更新する
    </button>
  </div>
</form>

<p class="text-center mt-6">
  <a href="<%= request.script_name %>/" class="text-accent hover:underline">← トップに戻る</a>
</p>
