<% @title = "組織選択" %>

<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">組織を選択してください</h1>

    <form method="post" action="<%= APP_ROUTE %>/select_organization" class="space-y-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">所属組織</label>
        <select name="organization_id" required
                class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring focus:ring-blue-200">
          <% @organizations.each do |org| %>
            <option value="<%= org.id %>"><%= org.name %></option>
          <% end %>
        </select>
      </div>

      <div>
        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700 transition">
          組織に入る
        </button>
      </div>
    </form>

    <p class="mt-4 text-center text-sm text-gray-600">
      <a href="<%= APP_ROUTE %>/logout" class="text-blue-600 hover:underline">ログアウト</a>
    </p>
  </div>
</div>
