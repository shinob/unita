<h2>行事の編集</h2>
<form action="<%= request.script_name %>/org/meetings/<%= @meeting.id %>/update" method="post">
  <label>タイトル:<br>
    <input type="text" name="title" value="<%= @meeting.title %>">
  </label><br><br>

  <label>説明:<br>
    <textarea name="description" rows="4" cols="50"><%= @meeting.description %></textarea>
  </label><br><br>

  <label>開催日時:<br>
    <input type="datetime-local" name="scheduled_at" value="<%= @meeting.scheduled_at.strftime('%Y-%m-%dT%H:%M') %>">
  </label><br><br>

  <label>終了日時:<br>
    <input type="datetime-local" name="ended_at" value="<%= @meeting.ended_at.strftime('%Y-%m-%dT%H:%M') %>">
  </label><br><br>
  
  <label>出欠回答締切日時:<br>
    <input type="datetime-local" name="deadline_at" value="<%= @meeting.deadline_at.strftime('%Y-%m-%dT%H:%M') %>">
  </label><br><br>

  <input type="submit" value="更新">
</form>
