<h1 class="text-2xl font-bold text-gray-800 mb-6">予定の編集</h1>

<form action="<%= request.script_name %>/org/meetings/<%= @meeting.id %>/update" method="post" class="bg-white p-6 rounded-lg shadow max-w-2xl mx-auto space-y-6">
  <%# タイトル %>
  <div>
    <label for="title" class="block text-sm font-medium text-gray-700 mb-1">タイトル</label>
    <input type="text" name="title" id="title" value="<%= @meeting.title %>" required
           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-200 focus:outline-none">
  </div>

  <%# 説明 %>
  <div>
    <label for="description" class="block text-sm font-medium text-gray-700 mb-1">詳細</label>
    <textarea name="description" id="description" rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-md resize-y focus:ring focus:ring-blue-200 focus:outline-none"><%= @meeting.description %></textarea>
  </div>

  <%# 開始日時 %>
  <div>
    <label for="scheduled_at" class="block text-sm font-medium text-gray-700 mb-1">開催日時</label>
    <input type="datetime-local" name="scheduled_at" id="scheduled_at"
           value="<%= @meeting.scheduled_at.strftime('%Y-%m-%dT%H:%M') %>" required
           class="w-full px-4 py-2 border border-gray-300 rounded-md">
  </div>

  <%# 終了日時 %>
  <div>
    <label for="ended_at" class="block text-sm font-medium text-gray-700 mb-1">終了日時</label>
    <input type="datetime-local" name="ended_at" id="ended_at"
           value="<%= @meeting.ended_at.strftime('%Y-%m-%dT%H:%M') %>" required
           class="w-full px-4 py-2 border border-gray-300 rounded-md">
  </div>

  <%# 締切日時 %>
  <div>
    <label for="deadline_at" class="block text-sm font-medium text-gray-700 mb-1">出欠締切日時</label>
    <input type="datetime-local" name="deadline_at" id="deadline_at"
           value="<%= @meeting.deadline_at.strftime('%Y-%m-%dT%H:%M') %>" required
           class="w-full px-4 py-2 border border-gray-300 rounded-md">
  </div>

  <%# 送信ボタン %>
  <div class="text-center">
    <button type="submit"
            class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition">
      更新する
    </button>
  </div>
</form>

<p class="text-center mt-6">
  <a href="<%= request.script_name %>/org/meetings/<%= @meeting.id %>" class="text-blue-600 hover:underline">← 予定詳細に戻る</a>
</p>
